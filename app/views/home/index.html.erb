<div class="home">
  <div class="home_title">
    <h4>
      Find a ride...
    </h4>
  </div>
  <div class="tool_bar">
    <div class="inputs">
      <%= form_tag home_filter_path, method: :get, remote: true do %>
        <div class="inline_field">
          <div class="field">
            <%= text_field_tag :origin, value = '', class: :maps_auto_complete,
                               id: :maps_origin,
                               placeholder: 'Origin' %>
          </div>
          <div class="field">
            <%= text_field_tag :destination, value='', class: :maps_auto_complete,
                               id: :maps_destination,
                               placeholder: 'Destination' %>
          </div>

          <div class="search_button">
            <button type="submit" class="btn"><i class='fa fa-search'></i></button>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <% if @rides.empty? %>
    <%= render partial: 'layouts/no_content', locals: { message: 'There is no available ride currently.'}  %>
  <% else %>
    <div class="home_contents">
      <div class="rides_container" id="home_rides">
        <%= render partial: 'home/rides', locals: { rides: @rides } %>
      </div>
    </div>
  <% end %>
</div>
