<div class="index_container">
  <h1>Vehicles</h1>

  <table class="table">
    <thead>
    <tr>
      <th colspan="1">Vehicle Model</th>
      <th colspan="1">License plate</th>
      <th colspan="1">Capacity</th>
      <th colspan="3">Controls</th>
    </tr>
    </thead>

    <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.vehicle_model %></td>
        <td><%= vehicle.license_plate %></td>
        <td><%= vehicle.capacity %></td>
        <td>
          <%= link_to 'Show', vehicle %>
        </td>
        <td>
          <%= link_to raw("<i class='fa fa-pencil-square-o'></i>"), edit_vehicle_path(vehicle), class: :edit_link %>
        </td>
        <td>
          <%= link_to raw("<i class='fa fa-trash'></i>"), vehicle, method: :delete, data: { confirm: 'Are you sure?' }, class: :delete_link %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Vehicle', new_vehicle_path %>

</div>
