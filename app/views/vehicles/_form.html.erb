<div class="basic_form_holder">
  <%= form_with(model: vehicle, local: true) do |form| %>
    <% if vehicle.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

        <ul>
          <% vehicle.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :vehicle_model %>
      <%= form.text_field :vehicle_model %>
    </div>

    <div class="field">
      <%= form.label :license_plate %>
      <%= form.text_field :license_plate %>
    </div>

    <div class="field">
      <%= form.label :capacity %>
      <%= form.number_field :capacity %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
