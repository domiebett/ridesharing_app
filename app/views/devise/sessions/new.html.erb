<div class="user">
  <div class="container">
    <% if alert %>
      <p class="toast alert"><%= alert %></p>
    <% elsif notice %>
      <p class="toast notice"><%= notice %></p>
    <% end %>

    <h3>Log in</h3>

    <div class="form_holder">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
                            required: true %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", required: true %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class: :btn %>
        </div>
      <% end %>
    </div>

    <div class="link_holders">
      <div class="links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
