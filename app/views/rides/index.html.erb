
<div class="index_container">
  <h1>Rides</h1>

  <table class="table">
    <thead>
    <tr>
      <th>Origin</th>
      <th>Destination</th>
      <th>Departure date</th>
      <th>Departure time</th>
      <th colspan="3">Controls</th>
    </tr>
    </thead>

    <tbody>
    <% @rides.each do |ride| %>
      <tr>
        <td><%= ride.origin %></td>
        <td><%= ride.destination %></td>
        <td><%= ride.departure_date %></td>
        <td><%= ride.departure_time %></td>
        <td><%= link_to 'Show', ride %></td>
        <td><%= link_to raw("<i class='fa fa-pencil-square-o'></i>"), edit_ride_path(ride), class: :edit_link %></td>
        <td><%= link_to raw("<i class='fa fa-trash'></i>"), ride, method: :delete, data: { confirm: 'Are you sure?' }, class: :delete_link %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Ride', new_ride_path %>
</div>
